<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @animal, remote: true, html: { style: "display:inline;" } do |f| %>
    <div class="modal-body">
      <ul class="errors"></ul>

      <div class="form-group">
        <%= f.label :nom, class:"control-label" %>
        <%= f.text_field :nom, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :raza, class: "control-label" %>
        <%= f.text_field :raza, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :zona, class: "control-label"%>
        <%= f.collection_select :zona_id, Zona.all, :id, :nom, :prompt => true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :any_naixement, class: "control-label" %>
        <%= f.text_field :any_naixement, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cuidador, class: "control-label"%>
        <%= f.collection_select :cuidador_id, User.all, :id, :email, :prompt => true, class: "form-control" %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>
    <% end %>
  </div>
</div>